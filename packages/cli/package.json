{
  "name": "@release-change/cli",
  "version": "0.1.5",
  "description": "Fully automated version management, changelog management and package publishing with a focus on monorepos, pre-releases and major version zero",
  "keywords": [
    "automation",
    "changelog",
    "cli",
    "major-version-zero",
    "monorepo",
    "package",
    "pre-release",
    "publish",
    "release",
    "release-automation",
    "release-workflow",
    "semantic",
    "semantic-version",
    "semver",
    "semver-release",
    "tags",
    "version",
    "versioning"
  ],
  "homepage": "https://github.com/release-change/release-change",
  "bugs": {
    "url": "https://github.com/release-change/release-change/issues"
  },
  "author": "Victor Brito (https://victor-brito.dev)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/release-change/release-change.git"
  },
  "type": "module",
  "license": "MIT",
  "files": [
    "configuration-schema.json",
    "dist"
  ],
  "exports": {
    "import": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "bin": {
    "release-change": "./bin/index.js"
  },
  "engines": {
    "node": "^20.18.3 || ^22.12.0 || ^24.0.0",
    "npm": ">=10.8.2",
    "pnpm": ">=10.30.1"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch --preserveWatchOutput & vitest",
    "release-change": "./bin/index.js"
  },
  "dependencies": {
    "@release-change/ci": "workspace:*",
    "@release-change/commit-analyser": "workspace:*",
    "@release-change/config": "workspace:*",
    "@release-change/get-packages": "workspace:*",
    "@release-change/git": "workspace:*",
    "@release-change/github": "workspace:*",
    "@release-change/logger": "workspace:*",
    "@release-change/release": "workspace:*",
    "@release-change/semver": "workspace:*",
    "@release-change/shared": "workspace:*"
  }
