{
  "name": "release-change",
  "version": "0.0.0",
  "private": true,
  "description": "Fully automated version management, changelog management and package publishing with a focus on monorepos, pre-releases and major version zero",
  "keywords": [
    "automation",
    "changelog",
    "cli",
    "major-version-zero",
    "monorepo",
    "package",
    "pre-release",
    "publish",
    "release",
    "release-automation",
    "release-workflow",
    "semantic",
    "semantic-version",
    "semver",
    "semver-release",
    "tags",
    "version",
    "versioning"
  ],
  "homepage": "https://github.com/release-change/release-change",
  "bugs": {
    "url": "https://github.com/release-change/release-change/issues"
  },
  "author": "Victor Brito (https://victor-brito.dev)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/release-change/release-change.git"
  },
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^20.18.3 || ^22.12.0",
    "npm": ">=10.8.2",
    "pnpm": ">=10.16.1"
  },
  "scripts": {
    "biome": "biome check --write .",
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:format:check": "biome format .",
    "biome:lint": "biome lint --write .",
    "biome:lint:check": "biome lint .",
    "build": "tsc --build",
    "dev": "pnpm tsc:watch & pnpm test:watch",
    "prepare": "husky",
    "release-change": "packages/cli/bin/index.js",
    "tsc:watch": "tsc --build --watch --preserveWatchOutput",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/node": "22.18.5",
    "husky": "9.1.7",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  }
}
