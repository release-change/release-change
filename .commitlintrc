extends:
  - "@commitlint/config-conventional"

rules:
  "footer-leading-blank":
    - 2
    - "always"
  "header-max-length":
    - 2
    - "always"
    - 72
  "type-enum":
    - 2
    - "always"
    -
      - "feat"
      - "fix"
      - "docs"
      - "style"
      - "refactor"
      - "perf"
      - "test"
      - "build"
      - "ci"
      - "chore"
      - "revert"
      - "Merge"